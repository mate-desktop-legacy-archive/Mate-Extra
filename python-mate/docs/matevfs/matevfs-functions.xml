    </refsect2>

    <refsect2 id="function-matevfs--mime_get_default_application">
      <title>matevfs.mime_get_default_application</title>
      <programlisting>
        <methodsynopsis language="python">
	  <methodname>matevfs.mime_get_default_application</methodname>

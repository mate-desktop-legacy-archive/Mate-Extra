   <sect1 id="mateweather-introduction">
      <title>Введение</title>
      <!-- ==== Figure ============================================= -->
      	 
      <figure id="weather-applet-fig">
	<title>Сводка погоды</title>  		
         <screenshot>             		  
            <mediaobject>                 			 

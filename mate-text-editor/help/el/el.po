msgid "Ctrl + N"
msgstr "Ctrl + N"

#: C/gedit.xml:920(para)
msgid "Create a new document."
msgstr "Δημιουργία νέου εγγράφου"

#: C/gedit.xml:923(para)
msgid "Ctrl + O"
msgstr "Ctrl + O"


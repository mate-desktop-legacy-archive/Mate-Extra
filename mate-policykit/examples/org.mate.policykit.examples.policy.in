<policyconfig>

  <action id="org.mate.policykit.examples.jump">
    <_description>Jump</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Jumping</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_self_one_shot</allow_active>
    </defaults>
  </action>

  <action id="org.mate.policykit.examples.frobnicate">
    <_description>Frobnicate</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Frobnicating</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_self</allow_active>
    </defaults>
  </action>
  
  <action id="org.mate.policykit.examples.tweak">
    <_description>Tweak</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Tweaking</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin</allow_active>
    </defaults>
  </action>
  
  <action id="org.mate.policykit.examples.twiddle">
    <_description>Twiddle</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Twiddling</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep_always</allow_active>
    </defaults>
  </action>
  
  <action id="org.mate.policykit.examples.punch">
    <_description>Punch</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Punching</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_self_keep_session</allow_active>
    </defaults>
  </action>

  <action id="org.mate.policykit.examples.toggle">
    <_description>Toggle</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Toggling</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep_always</allow_active>
    </defaults>
  </action>

  <action id="org.mate.policykit.examples.kick-foo">
    <_description>Kick foo</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Kicking foo</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_self</allow_active>
    </defaults>
    <annotate key="org.mate.policykit.examples.kick-path">foo</annotate>
  </action>

  <action id="org.mate.policykit.examples.kick-bar">
    <_description>Kick bar</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Kicking bar</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_self</allow_active>
    </defaults>
    <annotate key="org.mate.policykit.examples.kick-path">bar</annotate>
  </action>

  <action id="org.mate.policykit.examples.kick-baz">
    <_description>Kick baz</_description>
    <_message>System policy prevents the PolicyKit-mate example helper from Kicking baz</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_self</allow_active>
    </defaults>
    <annotate key="org.mate.policykit.examples.kick-path">baz</annotate>
  </action>

</policyconfig>

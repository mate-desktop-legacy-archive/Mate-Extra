pkgname=mate-disk-utility
pkgver=2011.08.31
pkgrel=2
pkgdesc="Simply a document viewer"
url="http://matsusoft.com.ar/projects/mate/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2' 'mate-icon-theme')
makedepends=('mate-doc-utils' 'mate-file-manager' 'mate-keyring')
groups=('mate-extra')
options=('!libtool' '!emptydirs')
conflicts=('gnome-disk-utility')
provides=('gnome-disk-utility')
source=(http://sourceforge.net/projects/matede/files/${pkgver}/${pkgname}.tar.gz/download)
sha256sums=('4adbcfab482edaa5e873131421ee27cd7d90e2a9745acf64f90de7d8725a4583')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr   --sysconfdir=/etc \
		--libexecdir=/usr/lib/${pkgname} \
		--disable-static --disable-scrollkeeper || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install || return 1
}
